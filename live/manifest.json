{
    "manifest_version" : 2,

    "name" : "Live Extension",
    "description" : "Track when your favorite artist is playing live!",
    "version" : "0.1",

    "page_action" : {
        "default_icon" : "live.png",
        "default_popup" : "popup.html",
        "default_title" : "Live! in concert"
    },

    "background" :
    {
        "scripts" : ["eventPage.js"],
        "persistent" : false
    },

    "permissions" :[
        "tabs"   
    ]
}